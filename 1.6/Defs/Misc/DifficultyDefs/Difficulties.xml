<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Strive to Thrive -->
  <DifficultyDef>
    <defName>StriveToThriveDifficulty</defName>
    <label>Strive to thrive</label>
    <description>
      No major threats, but everything is just a little bit harder.
      (*SectionTitle)Recommended for:(/SectionTitle)
      - Players who don't want to fight but think Peaceful is too easy.
    </description>
    <threatScale>1</threatScale>
    <allowBigThreats>false</allowBigThreats>
    <allowIntroThreats>false</allowIntroThreats>
    <predatorsHuntHumanlikes>false</predatorsHuntHumanlikes>
    <allowCaveHives>false</allowCaveHives>
    <colonistMoodOffset>-10</colonistMoodOffset>
    <cropYieldFactor>0.9</cropYieldFactor>
    <mineYieldFactor>0.9</mineYieldFactor>
    <butcherYieldFactor>0.9</butcherYieldFactor>
    <questRewardValueFactor>0.9</questRewardValueFactor>
    <foodPoisonChanceFactor>1.2</foodPoisonChanceFactor>
    <playerPawnInfectionChanceFactor>1.2</playerPawnInfectionChanceFactor>
    <diseaseIntervalFactor>0.8333</diseaseIntervalFactor>
    <tradePriceFactorLoss>0.1</tradePriceFactorLoss>
    <researchSpeedFactor>0.9</researchSpeedFactor>
    <deepDrillInfestationChanceFactor>0.4</deepDrillInfestationChanceFactor>
    <enemyReproductionRateFactor>0.3</enemyReproductionRateFactor>
    <scariaRotChance>0.6</scariaRotChance>
  </DifficultyDef>

  <!-- A Bit of Friction -->
  <DifficultyDef>
    <defName>ABitOfFrictionDifficulty</defName>
    <label>A bit of friction</label>
    <description>
      Even if there are no major threats, that doesn't make it easy. Colonists are harder to please,
      sickness is more common, and resources are a little harder come by.
      (*SectionTitle)Recommended for:(/SectionTitle)
      - Players who don't want to fight but still want a bit of a challenge.
    </description>
    <threatScale>1</threatScale>
    <allowBigThreats>false</allowBigThreats>
    <allowIntroThreats>false</allowIntroThreats>
    <predatorsHuntHumanlikes>false</predatorsHuntHumanlikes>
    <allowCaveHives>false</allowCaveHives>
    <colonistMoodOffset>-20</colonistMoodOffset>
    <cropYieldFactor>0.8</cropYieldFactor>
    <mineYieldFactor>0.8</mineYieldFactor>
    <butcherYieldFactor>0.8</butcherYieldFactor>
    <questRewardValueFactor>0.8</questRewardValueFactor>
    <foodPoisonChanceFactor>1.5</foodPoisonChanceFactor>
    <playerPawnInfectionChanceFactor>1.5</playerPawnInfectionChanceFactor>
    <diseaseIntervalFactor>0.6667</diseaseIntervalFactor>
    <tradePriceFactorLoss>0.2</tradePriceFactorLoss>
    <researchSpeedFactor>0.7</researchSpeedFactor>
    <deepDrillInfestationChanceFactor>0.4</deepDrillInfestationChanceFactor>
    <enemyReproductionRateFactor>0.3</enemyReproductionRateFactor>
    <scariaRotChance>0.6</scariaRotChance>
  </DifficultyDef>

  <!-- Endless Strife -->
  <DifficultyDef>
    <defName>EndlessStrifeDifficulty</defName>
    <label>Endless strife</label>
    <description>
      While your colonists will be safe from raids, manhunters, and machines, they will not be safe
      from each other. Colonist are impossible to please, sickness is rampant, and resources are
      scarce.
      (*SectionTitle)Recommended for:(/SectionTitle)
      - Players who want to fight their own colonists instead of raiders.
    </description>
    <threatScale>1</threatScale>
    <allowBigThreats>false</allowBigThreats>
    <allowIntroThreats>false</allowIntroThreats>
    <predatorsHuntHumanlikes>false</predatorsHuntHumanlikes>
    <allowCaveHives>false</allowCaveHives>
    <colonistMoodOffset>-30</colonistMoodOffset>
    <cropYieldFactor>0.7</cropYieldFactor>
    <mineYieldFactor>0.7</mineYieldFactor>
    <butcherYieldFactor>0.7</butcherYieldFactor>
    <questRewardValueFactor>0.7</questRewardValueFactor>
    <foodPoisonChanceFactor>1.8</foodPoisonChanceFactor>
    <playerPawnInfectionChanceFactor>1.8</playerPawnInfectionChanceFactor>
    <diseaseIntervalFactor>0.5556</diseaseIntervalFactor>
    <tradePriceFactorLoss>0.3</tradePriceFactorLoss>
    <researchSpeedFactor>0.5</researchSpeedFactor>
    <deepDrillInfestationChanceFactor>0.4</deepDrillInfestationChanceFactor>
    <enemyReproductionRateFactor>0.3</enemyReproductionRateFactor>
    <scariaRotChance>0.6</scariaRotChance>
  </DifficultyDef>

  <!-- Life is torment -->
  <DifficultyDef>
    <defName>LifeIsTormentDifficulty</defName>
    <label>Life is torment</label>
    <description>
      Colonists' very existance is reason enough for a mental break.
      (*SectionTitle)Recommended for:(/SectionTitle)
      - Min-maxing players who want to re-roll for Sanguine and Iron-Willed.
    </description>
    <threatScale>1</threatScale>
    <allowBigThreats>false</allowBigThreats>
    <allowIntroThreats>false</allowIntroThreats>
    <predatorsHuntHumanlikes>false</predatorsHuntHumanlikes>
    <allowCaveHives>false</allowCaveHives>
    <colonistMoodOffset>-40</colonistMoodOffset>
    <cropYieldFactor>0.6</cropYieldFactor>
    <mineYieldFactor>0.6</mineYieldFactor>
    <butcherYieldFactor>0.6</butcherYieldFactor>
    <questRewardValueFactor>0.6</questRewardValueFactor>
    <foodPoisonChanceFactor>2.1</foodPoisonChanceFactor>
    <playerPawnInfectionChanceFactor>2.1</playerPawnInfectionChanceFactor>
    <diseaseIntervalFactor>0.4762</diseaseIntervalFactor>
    <tradePriceFactorLoss>0.4</tradePriceFactorLoss>
    <researchSpeedFactor>0.3</researchSpeedFactor>
    <deepDrillInfestationChanceFactor>0.4</deepDrillInfestationChanceFactor>
    <enemyReproductionRateFactor>0.3</enemyReproductionRateFactor>
    <scariaRotChance>0.6</scariaRotChance>
  </DifficultyDef>
</Defs>